<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_top_10dp"
    android:layout_height="@dimen/height_70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_downloads_avatar"
        android:layout_width="@dimen/width_70dp"
        android:layout_height="@dimen/height_70dp"
        android:src="@drawable/ic_documents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_start_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_downloads_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:text="dsfdsgÄ‘fgfhgfhg.png"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_10dp">

            <TextView
                android:id="@+id/item_downloads_datetime"
                android:layout_width="@dimen/width_230dp"
                android:layout_height="wrap_content"
                android:text="29/08/2020"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/item_downloads_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_10dp"
                android:text="25,66GB"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>